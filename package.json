        "@eslint/js": "^9.20.0",
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^16.11.10",
        "@types/supertest": "^6.0.2",
        "@types/winston": "^2.4.4",
        "eslint": "^9.20.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.3",
        "mock-jwks": "^3.3.4",
        "nodemon": "^3.1.9",
        "prettier": "3.5.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.0"
